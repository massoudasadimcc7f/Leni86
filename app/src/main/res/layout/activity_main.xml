<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.calc.MainActivity"
    android:background="#b1b3b3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:background="#f92763">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wyswietlaczglowny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/wyswietlaczZnaki"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="25sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:onClick="znaki"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/wyswietlacz2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="sans-serif"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF">

            <Button
                android:onClick="toascik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="#31369a"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="sans-serif"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="C"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="zamiana"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="+/-"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="procent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="%"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="dzielenie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#31369a"
                    android:textColor="#FFFFFF"
                    android:text="/"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="add7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="7"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="add8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="8"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="add9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="9"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="mnozenie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#31369a"
                    android:textColor="#FFFFFF"
                    android:text="x"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="add4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="add5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="5"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="add6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:onClick="odjac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#31369a"
                    android:textColor="#FFFFFF"
                    android:text="-"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add1"
                    android:onClick="add1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="1"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:id="@+id/add2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="2"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"
                    android:onClick="add2"/>

                <Button
                    android:onClick="add3"
                    android:id="@+id/add3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#353ca7"
                    android:fontFamily="sans-serif"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:onClick="dodac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#31369a"
                    android:fontFamily="sans-serif"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:onClick="add0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text="0"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#353ca7"
                    android:textColor="#FFFFFF"
                    android:text=","
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"
                    android:onClick="kropka"/>

                <Button
                    android:onClick="wynik"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="#f92763"
                    android:text="="
                    android:textSize="24sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#FFFFFF"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>